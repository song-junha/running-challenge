# 서버 설정
PORT=3000
NODE_ENV=production

# 관리자 비밀번호 (사용자 수정/삭제, 대회 관리 시 필요)
ADMIN_PASSWORD=wwdwefd

# 데이터베이스 설정 (PostgreSQL)
# 로컬 개발: postgresql://user:password@localhost:5432/running_challenge
# Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# Oracle Cloud: postgresql://runapp:password@localhost:5432/running_challenge
DATABASE_URL=postgresql://user:password@localhost:5432/running_challenge

# Strava API 설정
# https://www.strava.com/settings/api 에서 앱을 만들고 값을 입력하세요
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here
STRAVA_REDIRECT_URI=https://your-domain.com/auth/strava/callback
